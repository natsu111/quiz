<h2>My Quiz</h2>
<h3><%= link_to "クイズを作る", new_post_path %></h3>
<ul>
<% @posts.each do |post| %>
    <li>
    <%= post.content %>
    <%= link_to "答えをみる", post_path(post) %>
    <%# link_to "[編集]", edit_post_path(post) %>
    <%= link_to "[削除]",
        post_path(post),
        method: :delete,
        data: { confirm: "クイズを削除しますか？" } %>
    </li>
 <% end %>
</ul>